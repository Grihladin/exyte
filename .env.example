# Copy this file to .env and update the values as needed.

# PostgreSQL configuration
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_DB=building_codes
POSTGRES_HOST=localhost
POSTGRES_PORT=55432

# Application connection string (used by psycopg/SQLAlchemy/etc.)
DATABASE_URL=postgresql://rag_user:rag_password@localhost:55432/building_codes

# OpenAI configuration
OPENAI_API_KEY=sk-your-key
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o

# Retrieval defaults
TOP_K_SECTIONS=5
HYBRID_SEARCH_WEIGHT=0.7

# LangGraph defaults
MAX_ITERATIONS=5
TEMPERATURE=0.1

# Weights & Biases (optional)
WANDB_ENABLED=false
WANDB_PROJECT=
WANDB_ENTITY=
WANDB_RUN_NAME=

# LibreChat UI configuration
LIBRECHAT_PORT=3080
LIBRECHAT_ALLOW_EMAIL_LOGIN=true
LIBRECHAT_ALLOW_REGISTRATION=true
LIBRECHAT_ALLOW_UNVERIFIED_EMAIL_LOGIN=true
# Base URL should include /v1 because LibreChat requests OpenAI paths directly.
LIBRECHAT_RAG_BASE_URL=http://rag-api:8000/v1
LIBRECHAT_RAG_MODEL_ID=building-code-rag
LIBRECHAT_RAG_DISPLAY_NAME=Building Code Assistant
LIBRECHAT_WELCOME_MESSAGE=Welcome to the Building Code Assistant
LIBRECHAT_RAG_API_KEY=rag-dev

# LibreChat -> RAG API auth (optional)
# Set both variables to the same value to require bearer auth for the /v1 endpoints.
RAG_API_KEY=rag-dev

